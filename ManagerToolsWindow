
//Obj Oriented Design Group Project 2022
//Manager tools window

import javax.swing.*;
import javax.swing.border.*;
import java.awt.*;
import java.awt.event.*;

public class ManagerToolsWindow{

    static void createAndShowGUI(){
        JFrame frame = new JFrame("Manager Tools");
        JPanel mainPanel = new JPanel();
        mainPanel.setLayout(new BorderLayout());

        //list of employees
        JPanel employeeListPanel = new JPanel();
        String test[] = {"Hello Obama"};//WE NEED THE LIST OF ACTUAL EMPLOYEES FROM THE DATABASE HERE
        JList testList = new JList(test);
        JScrollPane employeeScrollPane = new JScrollPane(testList);
        employeeListPanel.add(employeeScrollPane);
        String employeeListTitle = ("Employees");
        Border employeeListBorder = BorderFactory.createEtchedBorder();
        Border employeeListTitleBorder = BorderFactory.
        createTitledBorder(employeeListBorder, employeeListTitle);
        employeeListPanel.setBorder(employeeListTitleBorder);

        //add to panel
        mainPanel.add(employeeListPanel, BorderLayout.WEST);
        
        //frame
        frame.add(mainPanel);
        frame.setPreferredSize(new Dimension(500, 200));
        frame.pack();
        frame.setLocationRelativeTo(null);
        frame.setVisible(true);

    }
}
